#ifndef BUILDLOG_H
#define BUILDLOG_H 1

#include <osg/Object>
#include <osg/Notify>

#include <OpenThreads/Mutex>

#include <vpb/Export>


namespace vpb
{

class VPB_EXPORT OperationLog : public osg::Object
{
    public:
    
        OperationLog(const std::string& name):
            Object(true)
        {
            setName(name);
        }

        std::ostream& notify(osg::NotifySeverity level=osg::NOTICE);

};

class VPB_EXPORT BuildLog : public osg::Object
{
    public:
    
        BuildLog();
    

    protected:

};

}

#endif
